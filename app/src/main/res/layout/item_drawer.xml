<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/ripple_normal_background"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/iv_drawer_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:padding="6dp"
        android:layout_marginStart="30dp"
        tools:src="@mipmap/ic_like"/>

    <TextView
        android:id="@+id/tv_drawer_message"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/iv_drawer_icon"
        android:gravity="center_vertical"
        android:layout_marginStart="30dp"
        android:textSize="20dp"
        tools:text="123123"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="30dp"
        android:background="@color/color_B4B4B4"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
